# Example .env for backend
# Copy this file to `.env` and fill the values before starting the server.

# MongoDB connection string (replace <user>, <password>, <dbname>, and host)
MONGO_URL=mongodb+srv://<user>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority

# JWT secret used to sign and verify JSON Web Tokens
JWT_SECRET=your_jwt_secret_here

# Optional: server port (defaults to 3001 in code if not provided)
PORT=3001

# Optional: node environment
#NODE_ENV=development
